{
	"name": "server",
	"main": "src/index.ts",
	"type": "module",
	"scripts": {
		"build": "tsdown",
		"check-types": "tsc -b",
		"compile": "bun build --compile --minify --sourcemap --bytecode ./src/index.ts --outfile server",
		"dev": "bun run --hot src/index.ts",
		"start": "bun run dist/index.js"
	},
	"dependencies": {
		"hono": "^4.8.2",
		"better-auth": "catalog:",
		"dotenv": "catalog:",
		"zod": "^4.1.11",
		"@aws-sdk/client-s3": "^3.700.0",
		"@aws-sdk/s3-request-presigner": "^3.700.0",
		"@decosa/auth": "workspace:*",
		"@decosa/db": "workspace:*"
	},
	"devDependencies": {
		"typescript": "^5.8.2",
		"@types/bun": "^1.2.6",
		"tsdown": "^0.16.5",
		"@decosa/config": "workspace:*"
	}
}
