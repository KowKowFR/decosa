{
  "name": "decosa",
  "private": true,
  "type": "module",
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "better-auth": "^1.4.5",
      "dotenv": "^17.2.2",
      "@prisma/client": "^7.0.1"
    }
  },
  "scripts": {
    "check": "biome check --write .",
